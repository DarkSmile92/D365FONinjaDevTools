<Window x:Class="D365FONinjaDevTools.AddItemsToFolder.FileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add new file" Height="121" Width="348.574" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="auto" MinWidth="95" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Name="lblFolder" Content="File name:"  Margin="5"  Height="26"  Width="65" />
        <TextBox Grid.Row="0" VerticalContentAlignment="Center" Grid.Column="1" Name="txtName" Height="27" Margin="5"  />
        <Button Grid.Row="0" Grid.Column="2" Content="Add file" IsDefault="True" Name="btnCreate" Click="Button_Click" Margin="5" Height="28"  Width="75" />

    </Grid>
</Window>
